# Environment
NODE_ENV=development
PORT=5000

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/spark_investment"

# JWT Tokens
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production

# Token Expiration Times
ACCESS_TOKEN_EXPIRE=15m
REFRESH_TOKEN_EXPIRE=7d

# Legacy (will be deprecated)
JWT_EXPIRE=7d

# API Keys (Add when integrating external services)
# Market Data
ALPHA_VANTAGE_API_KEY=
YAHOO_FINANCE_API_KEY=

# Broker APIs
ZERODHA_API_KEY=
ZERODHA_API_SECRET=
GROWW_API_KEY=
GROWW_API_SECRET=

# AI APIs
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# WebSocket
WEBSOCKET_PORT=5001

# Logging
LOG_LEVEL=info

# Market Data Provider
# Options: mock, yahoo, zerodha, groww, binance
# Default: mock (no external API calls, instant responses)
MARKET_DATA_PROVIDER=mock

# Redis (for caching - optional)
REDIS_URL=redis://localhost:6379
